#------------------------------------------
# Sample vampire input file to perform
# benchmark calculation for v4.0
#
#------------------------------------------

#------------------------------------------
# Creation attributes:
#------------------------------------------
#------------------------------------------
# Creation attributes:
#------------------------------------------
create:crystal-structure=fcc
create:periodic-boundaries-x
create:periodic-boundaries-y
create:periodic-boundaries-z
#------------------------------------------
# System dimensions:
#------------------------------------------
dimensions:unit-cell-size = 3.524 !A
dimensions:system-size-x = 5. !nm
dimensions:system-size-y = 5. !nm
dimensions:system-size-z = 5. !nm

#------------------------------------------
# Material Files:s
#------------------------------------------
material:file = Ni.mat

#------------------------------------------
# Simulation attributes:
#-----------------------------------------

#sim:temperature=0.1
sim:time-steps-increment=1
sim:equilibration-time-steps=5E4
sim:total-time-steps=5e4
sim:time-step=0.3E-15
sim:applied-field-strength=0.0 !T
sim:applied-field-unit-vector=0,0,1


#------------------------------------------
# Program and integrator details
#------------------------------------------
sim:program=time-series
sim:integrator=llg-heun
#------------------------------------------
# data output
#------------------------------------------
output:output-rate = 500
output:real-time
output:temperature
output:magnetisation
#output:mean-specific-heat
#output:magnetisation-length

#screen:real-time
#screen:temperature
#screen:magnetisation
